{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "target": "es5",
    "lib": ["es6", "dom", "es7"],
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "downlevelIteration": true,
    "noImplicitThis": true,
    "paths": {
      "@redux/*": ["src/shared/redux/*"],
      "@shared/*": ["./src/shared/*"],
      "@web/*": ["./src/web/*"],
      "@app/*": ["./src/app/src/*"],
      "@portal/*": ["./src/portal/*"],
      "@test/*": ["./test/*"],
      "@src/*": ["./src/*"]
    }
  },
  "include": [
    "./node_modules/@types/",
    "./config/",
    "./src/",
    "./test/",
    "./types/"
  ],
  "exclude": [
    "./src/app/"
  ]
}
